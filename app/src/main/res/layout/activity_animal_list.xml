<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.AnimalListActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_Opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Zwierzaki do adopcji"
        android:textColor="#2B2929"
        android:textSize="36sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/animalListFragment"
        android:name="com.example.schronisko2.Fragments.AnimalListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/list_fragment" />

    <fragment
        android:id="@+id/animalDetailsFragment"
        android:name="com.example.schronisko2.Fragments.AnimalDetailsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>